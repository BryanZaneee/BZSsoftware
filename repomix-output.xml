:root {
  --bg-light: #f3e9dc;
  --bg-dark: #323b45;
  --bg-mix: #bdb2a8; /* computed via TS */
  --text: #111319; /* computed via TS */
  --muted: #7a8593;

  --glass: rgba(255, 255, 255, 0.08);
  --glass-border: rgba(255, 255, 255, 0.22);
  --glass-shadow: 0 10px 30px rgba(0, 0, 0, 0.25);

  --radius: 16px;
  --radius-pill: 999px;

  --maxw: 1200px;

  --inset: clamp(16px, 4vw, 32px);
  --gap: clamp(16px, 3vw, 28px);

  --focus: 2px solid rgba(255, 255, 255, 0.65);
}

*,
*::before,
*::after {
  box-sizing: border-box;
}

